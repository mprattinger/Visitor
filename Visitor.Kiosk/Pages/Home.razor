@page "/"
@using Visitor.Kiosk.Common.Interfaces
@using Visitor.Kiosk.Common.Icons
@using System.ComponentModel.DataAnnotations

<PageTitle>Welcome</PageTitle>

<div class="welcome-container">
    <div class="welcome-header">
        <Visitor.Kiosk.Components.Welcome />
        @* <div class="welcome">
            <div class="header-de">Willkommen!</div>
            <div class="header-en">Welcome!</div>
            <div class="header-fr">Bienvenue!</div>
            <div class="header-hu">Üdvözöljük!</div>
        </div> *@
        
        <p class="welcome-text">Thank you for visiting us today. Please use the button below to check in.</p>
    </div>

    @if (!showForm)
    {
        <div class="checkin-button-container">
            <button class="btn-checkin" @onclick="ShowCheckInForm">
                <UserCheck Width="32" Height="32" />
                <span>Self Check-In</span>
            </button>
        </div>
    }
    else
    {
        <div class="checkin-form-container">
            <h2>Check-In Form</h2>
            
            <EditForm Model="@checkInModel" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                
                <div class="form-group">
                    <label for="name">Name *</label>
                    <input type="text" id="name" class="form-control" @bind="checkInModel.Name" placeholder="Enter your name" />
                    <ValidationMessage For="@(() => checkInModel.Name)" />
                </div>

                <div class="form-group">
                    <label for="company">Company (optional)</label>
                    <input type="text" id="company" class="form-control" @bind="checkInModel.Company" placeholder="Enter your company name" />
                </div>

                <div class="form-buttons">
                    <button type="button" class="btn-cancel" @onclick="CancelCheckIn">Cancel</button>
                    <button type="submit" class="btn-submit">Submit</button>
                </div>
            </EditForm>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">@errorMessage</div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="success-message">@successMessage</div>
            }
        </div>
    }

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="signalr-message">
            <p>Message from server: @message</p>
        </div>
    }
</div>

@code {
    @inject IVisitCommunicationClientService service;

    string message = "";
    bool showForm = false;
    string? errorMessage = null;
    string? successMessage = null;
    CheckInModel checkInModel = new CheckInModel();

    protected override async Task OnInitializedAsync()
    {
        service.OnMessageReceived += (msg) =>
        {
            showForm = true;
            errorMessage = null;
            successMessage = null;
            checkInModel = new()
            {
                Name = "Michael",
                Company = "FlintSoft"
            };
            StateHasChanged();
        };

        await service.CreateHub();
    }

    void ShowCheckInForm()
    {
        showForm = true;
        errorMessage = null;
        successMessage = null;
    }

    void CancelCheckIn()
    {
        showForm = false;
        checkInModel = new CheckInModel();
        errorMessage = null;
        successMessage = null;
    }

    async Task HandleSubmit()
    {
        try
        {
            errorMessage = null;
            successMessage = null;

            await service.SendVisitorCheckIn(checkInModel.Name, checkInModel.Company ?? "");
            
            successMessage = "Check-in successful! Thank you.";
            
            // Reset form after short delay
            await Task.Delay(2000);
            CancelCheckIn();
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
    }

    public async ValueTask DisposeAsync()
    {
        await service.DisposeAsync();
    }

    public class CheckInModel
    {
        [Required(ErrorMessage = "Name is required")]
        [MaxLength(100, ErrorMessage = "Name must not exceed 100 characters")]
        public string Name { get; set; } = string.Empty;

        [MaxLength(100, ErrorMessage = "Company must not exceed 100 characters")]
        public string? Company { get; set; }
    }
}