@using FlintSoft.CQRS.Handlers
@using Visitor.Web.Common.Modals
@using Visitor.Web.Features.VisitorManagement.DomainEntities
@using System.ComponentModel.DataAnnotations
@using Visitor.Web.Common.Buttons

<PrimaryButton OnClick="() => showModal = true">
    Besuch planen
</PrimaryButton>

<Modal IsVisible="showModal" OnClose="handleClose" Title="Besuch planen">
    @if (Model is not null)
    {
        <EditForm EditContext="editContext" OnValidSubmit="Submit" FormName="plan-visit-form">
            <AntiforgeryToken />
            <DataAnnotationsValidator />

            <div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" class="form-control" @bind-value="Model.Name" />
                    <ValidationMessage For="@(() => Model.Name)" />
                </div>

                <div class="form-group">
                    <label for="company">Firma</label>
                    <input type="text" id="company" class="form-control" @bind-value="Model.Company" />
                    <ValidationMessage For="@(() => Model.Company)" />
                </div>

                <div class="form-group">
                    <label for="arrival">Erwartete Ankunft (optional)</label>
                    <input type="datetime-local" id="arrival" class="form-control" @bind-value="Model.ExpectedArrival" />
                    <ValidationMessage For="@(() => Model.ExpectedArrival)" />
                </div>
            </div>

            <div class="modal-footer">
                <SecondaryButton ButtonType="button" OnClick="handleClose">Abbrechen</SecondaryButton>
                <PrimaryButton ButtonType="submit">Besuch planen</PrimaryButton>
            </div>
        </EditForm>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
</Modal>

@code {
    @inject ICommandHandler<CreatePlannedVisit.Command, VisitorEntity> createPlannedVisitHandler;

    private bool showModal = false;

    [Parameter]
    public EventCallback OnVisitPlanned { get; set; }

    [SupplyParameterFromForm]
    private PlannedVisitDTO? Model { get; set; }

    private EditContext? editContext;
    private string? errorMessage;

    protected override void OnInitialized()
    {
        ResetForm();
    }

    private void ResetForm()
    {
        Model = new PlannedVisitDTO
        {
            ExpectedArrival = DateTime.UtcNow.AddMinutes(30) // Default to 30 minutes from now
        };
        editContext = new EditContext(Model);
        errorMessage = null;
    }

    private async Task Submit()
    {
        errorMessage = null;

        var result = await createPlannedVisitHandler.Handle(
            new CreatePlannedVisit.Command(Model!.Name, Model!.Company, Model.ExpectedArrival),
            CancellationToken.None);

        if (result.IsError)
        {
            var firstError = result.Errors.FirstOrDefault();
            errorMessage = firstError.Description ?? "An error occurred while planning the visit.";
            return;
        }

        await OnVisitPlanned.InvokeAsync();
        handleClose();
    }

    void handleClose()
    {
        Model = null;
        showModal = false;
        ResetForm();
    }

    public class PlannedVisitDTO
    {
        [Required(ErrorMessage = "Bitte geben Sie den Namen ein")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "Bitte geben Sie den Namen der Firma ein")]
        public string Company { get; set; } = string.Empty;

        public DateTime? ExpectedArrival { get; set; }
    }
}
