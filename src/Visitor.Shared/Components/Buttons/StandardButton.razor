@* Standard button component with basic blue styling *@
<button type="@ButtonType" class="btn-standard" @onclick="OnClick">
    @ChildContent
</button>

@code {
    [Parameter]
    public string ButtonType { get; set; } = "button";

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
